{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "./dist",
    "rootDir": "src",
    "declaration": false,
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "WebWorker"],
    "typeRoots": ["./node_modules/@types"],
    "types": ["chrome", "firefox-webext-browser", "react", "react-dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/web"
    }
  ]
}
