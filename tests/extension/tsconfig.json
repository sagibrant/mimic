{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node",                         // Use Node.js module resolution
    "baseUrl": ".",                                     // Base directory to resolve non-relative module names
    "outDir": "./dist",                                 // Output directory for compiled files
    "rootDir": ".",                                    // Root directory of source files
    "typeRoots": ["./node_modules/@types"],             // Specify where to find type definitions
    "types": ["node"],      // Include type definitions including Chrome extension API types
    "strict": false,
    "sourceMap": false,
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],           // Include all TypeScript and Vue files
  "exclude": ["node_modules", "dist"]                   // Exclude node_modules and output directory
}
